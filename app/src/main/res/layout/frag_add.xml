<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="jubin.jubscreation.MainActivity">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="#006699"
        tools:context="jubin.jubscreation.login">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Data"

            android:padding="10dp"
            android:background="#ee4a79"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/Adddata"
            android:textAppearance="@android:style/TextAppearance.Holo.Large" />

        <TextView
            android:text="@string/jubs_creation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/JBcreation"
            android:textAppearance="@android:style/TextAppearance.Holo.Large"
            android:textColor="#FFFFFF"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true" />




        <EditText
            android:layout_width="wrap_content"
            android:layout_height="39sp"
            android:inputType="textPersonName"
            android:hint="Enter ID"
            android:ems="10"
            android:layout_marginTop="63dp"
            android:id="@+id/id"
            android:background="#FFFFFF"
            android:width="320dp"
            android:layout_below="@+id/Adddata"
            android:layout_alignStart="@+id/mobnumber" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="39sp"
            android:inputType="textPersonName"
            android:hint="Enter Name"
            android:ems="10"
            android:id="@+id/name"
            android:background="#FFFFFF"
            android:width="320dp"
            android:layout_below="@+id/id"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="36sp"
            android:inputType="textPersonName"
            android:hint="Enter Contact"
            android:background="#FFFFFF"
            android:ems="10"
            android:layout_marginTop="20dp"
            android:width="320dp"
            android:id="@+id/mobnumber"
            android:layout_below="@id/name"
            android:layout_centerHorizontal="true" />


        <Button
            android:text="Enter Data to Database"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mobnumber"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="49dp"
            android:id="@+id/submit" />




    </RelativeLayout>

</FrameLayout>